<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2><strong>Current latest price for <%= @retailer.first_name %></strong></h2>
        <ul class="notes">
            <li class="active">
                <strong><%= @retailer.business_name.upcase %></strong>
            </li>
            <li class="active">
                <strong><%= retailer_full_name(@retailer) %></strong>
            </li>
            <li class="active">
                <strong><%= @retailer.email %></strong>
            </li>
            <li class="active">
                <i class="fa fa-phone"></i>&nbsp;<strong><%= @retailer.cell_number %></strong>
            </li>

            <%= link_to edit_supplier_retailer_path(@retailer), remote: true do %>
            <button type="button" class="btn btn-success pull-right" data-toggle="modal" data-target="#editRetailer">
                <i class="fa fa-plus"></i>
                <strong>&nbsp;Edit Retailer</strong>
            </button>
            <%end%>
        </ul>
    </div>
    <div class="col-lg-2"></div>
</div>

<div class="row" id="RetailPriceTable">
    <%= render partial: "retail_price_table", locals: {retailer: @retailer} %>
</div>
<br>
<br>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2><strong>Margins for <%= @retailer.first_name %></strong></h2>
    </div>
    <div class="col-lg-2"></div>
</div>


<!-- Margins-->
<div class="row" id="RetailerMarginTable">
    <%= render partial: 'margin_table', locals: { retailer: @retailer } %>
</div>


<div class="modal inmodal" id="editRetailer" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <i class="fa fa-usd modal-icon" style="color:#1ab394"></i>
                <h4 class="modal-title">Edit Retailer</h4>
                <span class="font-bold">Your Retailrs will get text message of your latest price</span>
            </br>
            <span class="font-bold">As (your fuel price + the Margin).</span>
        </div>
        <div class="modal-body" id="RetailerModelBody">
            <!-- form -->
        </div>
    </div>
</div>
</div>
