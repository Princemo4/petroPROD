<% @retailers.each do |retailer| %>

<div class="col-lg-6">


    <div class="contact-box">
        <%= link_to supplier_retailer_path(retailer) do %>

        <div class="col-sm-4">
            <div class="text-center">
                <%=image_tag( avatar_url(retailer), class: "img-circle m-t-xs img-responsive")%>
            </div>
        </div>
        <div class="col-sm-8">
            <h3>
                <strong><%= retailer_full_name(retailer)%></strong>
            </h3>
            <address>
              <strong><%= retailer.business_name %></strong><br>

              <strong>Name: </strong>
              <%= retailer_full_name(retailer)%><br>
              <strong>Email:</strong>
              <%= retailer.email%><br>
              <strong>Zip Code</strong>
              <%= retailer.zip_code %><br>
              <abbr title="Phone">
                  <strong>
                      <i class="fa fa-phone"></i>
                  </strong>
              </abbr>
              <%= retailer.cell_number %>
            </address>
          <span class="label"> Click to view Margins <br>and their Current Fuel Price.</span>
        </div>
        <%end%>
        <div class="clearfix"></div>

    </div>

</div>

<%end%>
